{
    "[c]": {
        "files.encoding": "utf8"
    },
    "[cpp]": {
        "files.encoding": "utf8"
    },
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
	"files.exclude": {
        "**/CVS": false,
		"**/*.ctx": true
	},
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.cp": "cpp",
        "algorithm": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstddef": "cpp",
        "cstdio": "cpp",
        "cstring": "cpp",
        "cwchar": "cpp",
        "exception": "cpp",
        "iterator": "cpp",
        "new": "cpp",
        "typeinfo": "cpp"
    },
    "search.useIgnoreFiles": false,
    "search.exclude": {
        "build/*/config.json": true,
        "build/**/*.MAP": true,
        "build.ninja": true,
        ".ninja_*": true,
        "objdiff.json": true
    }
}
